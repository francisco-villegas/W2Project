<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.example.francisco.w2project.W2Project">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Default dialog"
            android:background="@drawable/green_button_boarder"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:id="@+id/btnDefault"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Custom Dialog"
            android:background="@drawable/yellow_button_boarder"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:id="@+id/btnCustom"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Array Dialog"
            android:background="@drawable/red_button_boarder"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:id="@+id/btnArray"
            android:layout_weight="1"
            />
    </LinearLayout>

    <TextView
        android:padding="15sp"
        android:id="@+id/tvTextArray"
        android:textSize="15sp"
        android:background="@drawable/gray_button_boarder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:id="@+id/frag_timer_text"
        android:padding="80sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <FrameLayout
        android:id="@+id/frag_timer_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/container"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
