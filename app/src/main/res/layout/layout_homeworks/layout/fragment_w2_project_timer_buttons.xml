<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.francisco.w2project.w2_project_timer_buttons">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/white_button_boarder"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnPlayTimer"
                android:src="@drawable/ic_play_arrow"
                android:background="@drawable/green_button_boarder"
                android:layout_width="70dip"
                android:layout_height="70dip" />

            <ImageButton
                android:id="@+id/btnPauseTimer"
                android:src="@drawable/ic_pause"
                android:background="@drawable/yellow_button_boarder"
                android:layout_width="70dip"
                android:layout_height="70dip" />

            <ImageButton
                android:id="@+id/btnStopTimer"
                android:src="@drawable/ic_stop"

                android:background="@drawable/red_button_boarder"
                android:layout_width="70dip"
                android:layout_height="70dip" />
            <ImageButton
                android:id="@+id/btnLapseTimer"
                android:src="@drawable/ic_alarm"
                android:scaleType="fitXY"
                android:background="@drawable/blue_button_boarder"
                android:layout_width="70dip"
                android:layout_height="70dip" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
