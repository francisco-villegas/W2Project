<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="10dp"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/dialog_img"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_business" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="20sp"
        android:paddingTop="20sp"
        android:text="This is an application designed to show some examples about the projects of Francisco, be free to contact him if you have any questions or if you are insteredted in his skills."
        android:textSize="20dp" />

    <Button
        android:id="@+id/dismiss"
        android:background="@drawable/green_button_boarder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:text="Dismiss" />
</LinearLayout>